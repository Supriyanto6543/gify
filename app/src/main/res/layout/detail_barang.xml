<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/backgroundsemua"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:background="#fab60b"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">



        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backDetailKado"
                android:layout_weight="2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="start"
                android:padding="10dp"
                android:src="@drawable/reply" />

            <TextView
                android:layout_weight="28"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="start"
                android:text="DETAIL KADO"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="17dp"/>

            <ImageView
                android:id="@+id/cariBarangDetailKado"
                android:layout_weight="2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="start"
                android:padding="10dp"
                android:src="@drawable/magnifying_glass" />

            <ImageView
                android:id="@+id/chartDetailKado"
                android:layout_weight="2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="start"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:src="@drawable/add_to_cart" />








        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.synnapps.carouselview.CarouselView
                        android:id="@+id/carousel"
                        app:autoPlay="false"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="#4a4a4a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/namadetail"
                        android:text="Dompet Klulit Moder Pria Inficlo (SPP509)"
                        android:textStyle="bold"
                        android:textSize="19dp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginStart="30dp"
                        android:layout_weight="50"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_weight="35"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:src="@drawable/love"
                        android:layout_gravity="end"
                        android:layout_weight="10"
                        android:layout_width="30dp"
                        android:layout_height="40dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/hargadetail"
                        android:text="Rp 120.000,;"
                        android:textColor="#fd672c"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/descdetail"
                        android:text="Produk Terbaru dari Barnd infclo dibuad dengan bahan yang nyaman digunakan, kualitas terbaik, desain trendy, update dan tidak pasaran. Membuat tampil percaya diri."
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="#4a4a4a"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/belikadodetail"
                android:text="BELI KADO"
                android:background="#fd672c"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>



    </ScrollView>



</LinearLayout>