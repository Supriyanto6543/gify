<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameCheckout"
    android:orientation="vertical"
    android:background="#fab60b"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:background="#fab60b"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">



            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/backCheckout"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:src="@drawable/reply" />

                <TextView
                    android:layout_weight="45"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:text="CHECKOUT"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="25dp"/>


            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="5dp"
                    app:cardElevation="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Nama Penerima"
                            android:textStyle="bold"
                            android:textColor="#aa7a00"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/nama"
                            android:hint="Nasrudin Nawawi"
                            android:textColorHint="#b5a981"
                            android:textColor="#aa7a00"
                            android:background="@drawable/kamdakmdwk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="No.HP Penerima"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:textColor="#aa7a00"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/hp"
                            android:hint="Nasrudin Nawawi"
                            android:textColorHint="#b5a981"
                            android:textColor="#aa7a00"
                            android:background="@drawable/kamdakmdwk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:text="Alamat"
                                android:textStyle="bold"
                                android:textColor="#aa7a00"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:weightSum="100"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/maps"
                                    android:tint="#dad9d5"
                                    android:layout_weight="5"
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"/>

                                <EditText
                                    android:id="@+id/jalan"
                                    android:hint="Jl."
                                    android:background="@drawable/kamdakmdwk"
                                    android:textColorHint="#b5a981"
                                    android:textStyle="bold"
                                    android:textSize="15dp"
                                    android:textColor="#aa7a00"
                                    android:layout_marginStart="2dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:autofillHints="Nama depan" />


                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/pilihKelurahanCheckout"
                                android:layout_marginTop="5dp"
                                android:weightSum="100"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/kelurahan"
                                    android:hint="Kelurahan"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="#aa7a00"
                                    android:textColorHint="#b5a981"
                                    android:background="@drawable/kamdakmdwk"
                                    android:textSize="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/pilihKecamatanCheckout"
                                android:layout_marginTop="5dp"
                                android:weightSum="100"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/kecamatan"
                                    android:hint="Kecamatan"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:background="@drawable/kamdakmdwk"
                                    android:textColorHint="#b5a981"
                                    android:textSize="15dp"
                                    android:textColor="#aa7a00"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>


                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/pilihKotaCheckout"
                                android:layout_marginTop="5dp"
                                android:weightSum="100"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/kota"
                                    android:hint="Kota"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textSize="15dp"
                                    android:background="@drawable/kamdakmdwk"
                                    android:textColor="#aa7a00"
                                    android:textColorHint="#b5a981"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/pilihProvinsiCheckout"
                                android:layout_marginTop="5dp"
                                android:weightSum="100"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/provinsi"
                                    android:hint="Provinsi"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textColorHint="#b5a981"
                                    android:textSize="15dp"
                                    android:background="@drawable/kamdakmdwk"
                                    android:textColor="#aa7a00"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>



                        </LinearLayout>

                        <TextView
                            android:text="Ucapan"
                            android:layout_marginTop="@dimen/padd_10"
                            android:textColor="#b5a981"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/ucapan"
                            android:background="@drawable/goku"
                            android:hint="Ucapan"
                            android:textColor="#aa7a00"
                            android:layout_marginTop="5dp"
                            android:textColorHint="#b5a981"
                            android:layout_marginBottom="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="LabelFor" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/prorsesCheckout"
                    android:background="@drawable/tombol"
                    android:text="PROSES"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/ongkir"
                    android:background="@drawable/tombol"
                    android:text="CEK ONGKIR"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>