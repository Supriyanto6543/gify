<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#fab60b"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Reset Kata Sandi"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="untuk reset kata sandi,
        masukan email kamu melalu form dibawah ini"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="70dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/lupa_password_background"
        android:layout_marginTop="40dp"
        android:layout_width="390dp"
        android:layout_height="230dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="@drawable/edittext_login"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:src="@drawable/email"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_weight="15"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:contentDescription="@string/todo" />

        <EditText
            android:id="@+id/emailResetPassword"
            android:hint="Email"
            android:textColorHint="#818181"
            android:autofillHints="Email"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:textColor="#000"
            android:background="@drawable/login_email_password"
            android:layout_weight="85"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <Button
        android:id="@+id/resetPassword"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/tombol"
        android:text="RESET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>