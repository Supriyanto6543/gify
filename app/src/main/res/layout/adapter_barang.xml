<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:backgroundTint="#fff"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="#fff"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/foto_barang"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <TextView
                android:id="@+id/hargaBarangAdapter"
                android:text="RP 120.000,-"
                android:textColor="#fd672c"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/deskripsiBarangAdapter"
                android:text="Dompet Kulit Modern Pria Inficlo (SPP 509)"
                android:textColor="#b4b3b3"
                android:textAlignment="textStart"
                android:layout_marginBottom="18dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="RtlCompat" />


        </LinearLayout>




    </androidx.cardview.widget.CardView>


</LinearLayout>