<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#fff"
            android:layout_weight="75"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tanggalpembelian"
                    android:text="28-02-2020"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="#4a4a4a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="ID Pesanan/Invoice"
                        android:textColor="#fd672c"
                        android:layout_weight="50"
                        android:textSize="12dp"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/invoice"
                        android:text="#20201235"
                        android:textColor="#fd672c"
                        android:gravity="end"
                        android:layout_weight="50"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Jenis Kado:"
                        android:layout_weight="35"
                        android:textSize="12dp"
                        android:textColor="#4a4a4a"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/namapembelian"
                        android:text="Dompet Kulit Modern Pria"
                        android:gravity="end"
                        android:layout_weight="65"
                        android:textSize="12dp"
                        android:singleLine="true"
                        android:textColor="#4a4a4a"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Penerima  :"
                        android:layout_weight="35"
                        android:textSize="12dp"
                        android:textColor="#4a4a4a"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/penerima"
                        android:text="Nasrudin"
                        android:gravity="end"
                        android:layout_weight="65"
                        android:textColor="#4a4a4a"
                        android:textSize="12dp"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="No. Resi"
                        android:layout_weight="35"
                        android:textSize="12dp"
                        android:textColor="#4a4a4a"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/resi"
                        android:text="-"
                        android:gravity="end"
                        android:layout_weight="65"
                        android:singleLine="true"
                        android:textSize="12dp"
                        android:textColor="#4a4a4a"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#FD672C"
            android:layout_weight="25"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="@dimen/padd_10"
                android:layout_marginStart="@dimen/padd_10"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Status:"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/statuspembelian"
                    android:text="Lunas (Dikirim)"
                    android:textSize="12dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>