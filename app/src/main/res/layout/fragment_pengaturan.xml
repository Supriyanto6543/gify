<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fab60b"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context=".Fragment.pengaturan.PengaturanFragment">

    <androidx.appcompat.widget.Toolbar
        android:background="#fab60b"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backPengaturan"
                android:layout_weight="2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="start"
                android:padding="10dp"
                android:src="@drawable/reply" />

            <TextView
                android:layout_weight="28"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="start"
                android:text="PENGATURAN"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="17dp"/>

            <ImageView
                android:id="@+id/checklistPengaturan"
                android:layout_weight="2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="start"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:src="@drawable/checkmark" />








        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#AA7A00"
        android:foregroundTint="#AA7A00"
        app:cardElevation="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/changePicturePengaturan"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_weight="49.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <ImageView
                    android:tint="#dad9d5"
                    android:src="@drawable/image"
                    android:layout_width="50dp"
                    android:layout_height="90dp"/>

                <TextView
                    android:text="Profile Picture"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:layout_weight="1"
                android:layout_width="0.1dp"
                android:layout_height="90dp"/>

            <LinearLayout
                android:id="@+id/changeCoverPengaturan"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_weight="49.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/photo"
                    android:layout_width="50dp"
                    android:layout_height="90dp"/>

                <TextView
                    android:text="Cover Picture"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>




    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="7dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="48"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:text="First name"
                        android:textStyle="bold"
                        android:textColor="#aa7a00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/namaDepanPengaturan"
                        android:hint="Nama depan"
                        android:background="@drawable/dbjadjahdja"
                        android:textColorHint="#b5a981"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:singleLine="true"
                        android:textColor="#b5a981"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="Nama depan" />


                </LinearLayout>

                <View
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="2dp"/>


                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="48"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Last name"
                        android:textStyle="bold"
                        android:textColor="#aa7a00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/namaBelakangPengaturan"
                        android:hint="Nama belakang"
                        android:background="@drawable/dbjadjahdja"
                        android:textColorHint="#b5a981"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:singleLine="true"
                        android:textColor="#b5a981"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="Nama depan" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:text="No. handphone"
                    android:textStyle="bold"
                    android:textColor="#aa7a00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/noHpPengaturan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="Nama depan"
                    android:hint="0878-9968-xxx"
                    android:background="@drawable/dbjadjahdja"
                    android:singleLine="true"
                    android:textColor="#b5a981"
                    android:textColorHint="#b5a981"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:text="Email"
                    android:textStyle="bold"
                    android:textColor="#aa7a00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/emailPengaturan"
                    android:background="@drawable/dbjadjahdja"
                    android:hint="nasrudin01@gmail.com"
                    android:textColorHint="#b5a981"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#b5a981"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:text="Alamat"
                    android:textStyle="bold"
                    android:textColor="#aa7a00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/maps"
                        android:tint="#dad9d5"
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:layout_height="20dp"/>

                    <EditText
                        android:id="@+id/edittextAlamatPengaturan"
                        android:visibility="gone"
                        android:background="@drawable/dbjadjahdja"
                        android:hint="nasrudin01@gmail.com"
                        android:textColorHint="#b5a981"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginStart="2dp"
                        android:textColor="#fff"
                        android:layout_weight="85"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:autofillHints="Nama depan" />


                    <TextView
                        android:id="@+id/textviewAlamatPengaturan"
                        android:hint="Jl."
                        android:textColorHint="#b5a981"
                        android:textStyle="bold"
                        android:textColor="#b5a981"
                        android:layout_marginStart="2dp"
                        android:layout_weight="89"
                        android:layout_width="0dp"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:autofillHints="Nama depan" />

                    <ImageView
                        android:id="@+id/gantiAlamatPengaturan"
                        android:src="@drawable/edit"
                        android:tint="#dad9d5"
                        android:layout_weight="6"
                        android:layout_width="0dp"
                        android:layout_height="20dp"/>




                </LinearLayout>


                <View
                    android:background="#fae59d"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="4.5dp"/>

                <LinearLayout
                    android:id="@+id/pilihKelurahanPengaturan"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="5dp"
                    android:weightSum="100"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Kelurahan"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="#b5a981"
                        android:textSize="15dp"
                        android:layout_weight="30"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/kelurahan"
                        android:text="-- pilih --"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#b5a981"
                        android:layout_weight="30"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <View
                    android:background="#b5a981"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="4.5dp"/>

                <LinearLayout
                    android:id="@+id/pilihKecamatanPengaturan"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="5dp"
                    android:weightSum="100"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Kecamatan"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="#b5a981"
                        android:textSize="15dp"
                        android:layout_weight="30"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/kecamatan"
                        android:text="-- pilih --"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:textColor="#b5a981"
                        android:textSize="15dp"
                        android:layout_weight="30"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <View
                    android:background="#b5a981"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="4.5dp"/>

                <LinearLayout
                    android:id="@+id/pilihKotaPengaturan"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="5dp"
                    android:weightSum="100"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Kota"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="#b5a981"
                        android:layout_weight="30"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/kota"
                        android:text="-- pilih --"
                        android:layout_gravity="center"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:textColor="#b5a981"
                        android:layout_weight="30"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <View
                    android:background="#b5a981"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="4.5dp"/>

                <LinearLayout
                    android:id="@+id/pilihProvinsiPengaturan"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="5dp"
                    android:weightSum="100"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Provinsi"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="#b5a981"
                        android:layout_weight="30"
                        android:textSize="15dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/provinsi"
                        android:text="-- pilih --"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:textColor="#b5a981"
                        android:layout_weight="30"
                        android:textSize="15dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <View
                    android:background="#b5a981"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="4.5dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

            </LinearLayout>

        </LinearLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>