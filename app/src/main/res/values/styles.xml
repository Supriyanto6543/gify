<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FAB60B</item>
        <item name="colorPrimaryDark">#FD672C</item>
        <item name="colorAccent">#AA7A00</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="NumberPickerTime" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:fontFamily">@font/arial</item>
    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyAppTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
    </style>

</resources>
